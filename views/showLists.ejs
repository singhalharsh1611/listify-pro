<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listify Pro</title>
    <link rel="stylesheet" href="css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <script src="https://kit.fontawesome.com/d6918f0ef1.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- Navbar -->
<nav class="navbar navbar-expand-lg fixed-top bg-dark navbar-dark">
    <div class="container">
        <div class="logo d-flex align-items-center">
            <a class="navbar-brand" href="/showLists">
                <img src="assets/logo.png" alt="">
            </a>
            
        </div>
        
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto align-items-center">
          
          <li class="nav-item">
            <span class="nav-link mx-2 text-white">Welcome Back, <%= name %> !</span>
        </li>
          
          <li class="nav-item ms-3">
            <a class="btn btn-light btn-rounded" href="#!">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- Navbar -->

  <div class="container mt-5 pt-5">
    <h1 class="d-flex justify-content-center">Your Lists</h1>
    <div class="d-flex flex-column justify-content-center align-items-center">
    <ul class="list-group" style="min-width:270px">
        <% lists.forEach(function(list){ %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <a href="/listTitle/<%= list %>" class="text-decoration-none text-dark">
                <%= list %>
            </a>
                <form action="/removeList" method="POST">
                    <input type="hidden" class="form-control rounded-3" name="listToRemove" value="<%= list %>">
                    <button type="submit" class="btn btn-danger rounded-circle"><i class="fa-solid fa-xmark"></i></button>
                </form>
            </li>
        <% }) %>
    </ul>   
  </div>     
</div>

    <div class="d-flex flex-column justify-content-center align-items-center">
      <form action="/addList" method="POST" class="mt-4">
        <div class="input-group">
            <input type="text" class="form-control rounded-3" name="newList" placeholder="New List" required >
            <button type="submit" class="btn btn-primary ms-4 rounded-circle"><i class="fa-solid fa-plus"></i></button>
        </div>
    </form>
    </div>


  







    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
</script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  
</body>
</html>