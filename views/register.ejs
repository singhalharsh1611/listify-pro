<%- include('partials/header-1') %>
    <!-- main container -->
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <!-- signup -->
        <div class="row border rounded-4 p-3 bg-white shadow box-area">
            <!-- left box -->
            <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column left-box" style="background-color: #f5f5dc">
                <div class="featured-image mb-2">
                    <img src="assets/signup.gif" class="img-fluid" style="width:300px">
                </div>
                <p class="fs-2" style="font-family: 'Courier New', Courier, monospace; font-weight: 600;">Join Listify Pro</p>
                <small class="mb-3 text-wrap text-center fs-6" style="font-family: 'Courier New', Courier, monospace;">List you tasks!</small>
            </div>
                <!-- right box -->
                <div class="col-md-6 right-box p-4">
                    <div class="row align-items-center">
                        <div class="header-text mb-2">
                            <p class="fs-2">Welcome to Listify Pro</p>
                            <p>Create your account to get started</p>
                        </div>

                        <form action="/register" method="POST">
                            <div class="input-group mb-3">
                                <input type="text" class="form form-control bg-light w-100 fs-6" placeholder="Name" type="text" name="name" required>
                            </div>
                        <div class="input-group mb-3">
                            <input type="email" class="form form-control bg-light w-100 fs-6" placeholder="Email Address" type="email" name="username" required>
                        </div>
                        <div class="input-group mb-3">
                            <input type="password" class="form form-control bg-light w-100 fs-6" placeholder="Password" type="password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}" required>
                        </div>
                        
                        <div class="input-group mb-3">
                            <button class="btn btn-lg btn-primary w-100 fs-6" type="submit">Sign Up</button>
                        </div>
                        </form>

                        <div class="input-group mb-3">
                          <a href="/auth/google"  class="btn btn-lg btn-light w-100 fs-6"><img src="assets/google.svg" style="width:20px" class="me-2"><small>Sign Up with Google</small></a>
                        </div>
                        </div>
                        <div class="row">
                            <small class="ps-3">Already have an account? <a href="/login">Login Instead</a></small>
                        </div>

                    
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer-1') %>