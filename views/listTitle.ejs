<%- include('partials/header-2') %>

    <div class="my-tasks">

    

    <div class="container mt-5 pt-5">
        <h1 class="d-flex justify-content-center text-white"><%= listName %></h1>
        <div class="d-flex flex-column justify-content-center align-items-center">
            <ul class="list-group" style="width:300px">
                <% listItems.forEach(function(item){ %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <input type="checkbox" class="me-3 ms-1">
                            <span><%= item %></span>
                        </div>
                        
                        <form action="/removeItem" method="POST">
                            <input type="hidden" name="listName" value="<%= listName %>">
                            <input type="hidden" class="form-control rounded-3" name="itemToRemove" value="<%= item %>">
                            <button type="submit" class="btn btn-danger rounded-circle"><i class="fa-solid fa-xmark"></i></button>
                        </form>
                    </li>
                <% }) %>
            </ul>   
        </div>     
    </div>

    <div class="d-flex flex-column justify-content-center align-items-center">
        <form action="/addItem" method="POST" class="mt-4">
            <div class="input-group">
                <input type="hidden" name="listName" value="<%= listName %>">
                <input type="text" class="form-control rounded-3" name="newItem" placeholder="New Item" required>
                <button type="submit" class="btn btn-primary ms-4 rounded-circle"><i class="fa-solid fa-plus"></i></button>
            </div>
        </form>
    </div>

</div>
<%- include('partials/footer-2') %>